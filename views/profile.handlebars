<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Movie Review:</h3>

        <form class="form new-movie-form">
            <div class="form-group">
                <lable for="movie-name">Movie Name:</lable>
                <input class="form-input" type="text" id="movie-name" name="movie-name"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if movies.length}}
    <div class="col-md-6 movie-list">
        <h3>Current Movie Reviews:</h3>

        {{#each movies as |movie|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/movie/{{movie.id}}">{{movie.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{movie.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>