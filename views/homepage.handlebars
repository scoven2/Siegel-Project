<!-- Loop over each object in the movies array -->
{{#each movies as |movie| }}
<div class="text-center"></div>
<div class="text-center content-center max-w-md mx-auto rounded overflow-hidden shadow-lg">
  <img class="w-full" src="https://www.hollywoodreporter.com/wp-content/uploads/2021/05/Paramount2-copy.jpg?w=681&h=383&crop=1" alt="Sunset in the mountains">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><a href="/movie/{{movie.id}}">{{movie.name}}</a></div>
    <span class="dollar-amount">{{format_amount needed_funding}}</span>
    <span for="img" aria-label="stars">‚≠ê</span>
    <p class="text-gray-700 text-base">
      {{description}}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Review By: {{user.name}}</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">{{format_date date_created}}</span>
  </div>
</div>


{{/each}}


